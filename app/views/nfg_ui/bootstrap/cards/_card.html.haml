-# http://getbootstrap.com/docs/4.1/components/card/
%div{ card.html_options }
  - if card.heading.present?
    = ui.bootstrap :card_header, heading: card.heading
  = ui.nfg :card_body do
    - if card.title.present?
      %h5.card-title= card.title
    - if card.subtitle.present?
      %h6.card-subtitle= card.subtitle
    = card.body
  - if card.footer.present?
    = ui.nfg :card_footer, body: card.footer
